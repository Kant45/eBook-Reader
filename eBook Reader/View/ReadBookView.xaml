<UserControl x:Class="eBook_Reader.View.ReadBookView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewmodel="clr-namespace:eBook_Reader.ViewModel"
             xmlns:local="clr-namespace:eBook_Reader.View"
             d:DataContext="{d:DesignInstance Type=viewmodel:ReadBookViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="#fdf8e8">

        <FlowDocumentPageViewer Style="{DynamicResource FlowDocumentPageViewerStyle}">
            <FlowDocument ColumnWidth="600" ColumnGap="30">
                <BlockUIContainer>
                    <Image Source="{Binding CoverImage}" />
                </BlockUIContainer>
                <Paragraph TextAlignment="Justify" Background="#fdf8e8">
                    <Run Text="{Binding SelectedHtml, Mode=TwoWay}" />
                </Paragraph>
            </FlowDocument>
        </FlowDocumentPageViewer>

    </Grid>
</UserControl>
